{
  // Status bar buttons provided by the "Commands" extension.
  // These run the three main flows:
  // - Browser dev server
  // - Desktop Electron app
  // - Full Unraid deploy
  "commands.commands": {
    "Web Dev": {
      "command": "workbench.action.tasks.runTask",
      "args": "Browser: Run local web server",
      "statusBar": {
        "alignment": "left",
        "text": "üåê Web",
        "tooltip": "Run browser dev server"
      }
    },
    "Desktop Dev": {
      "command": "workbench.action.tasks.runTask",
      "args": "Desktop: Run Electron app",
      "statusBar": {
        "alignment": "left",
        "text": "üñ• Desktop",
        "tooltip": "Run Electron app"
      }
    },
    "Deploy Unraid": {
      "command": "workbench.action.tasks.runTask",
      "args": "Deploy: Unraid full",
      "statusBar": {
        "alignment": "left",
        "text": "‚¨Ü Deploy",
        "tooltip": "Build + deploy to Unraid"
      }
    },
    "Git Pull": {
      "command": "git.pull",
      "statusBar": {
        "alignment": "left",
        "text": "‚¨á Pull",
        "tooltip": "git pull in workspace"
      }
    }
  }
}
