{
  // Status bar buttons provided by the "Commands" extension.
  // These run the main flows:
  // - Browser dev server
  // - Desktop Electron app
  // - Build + deploy game (AppImage + EXE)
  // - Build + deploy launcher
  // - Full Unraid deploy
  "commands.commands": {
    "Web Dev": {
      "command": "workbench.action.tasks.runTask",
      "args": "Browser: Run local web server",
      "statusBar": {
        "alignment": "left",
        "text": "üåê Web",
        "tooltip": "Run browser dev server"
      }
    },
    "Desktop Dev": {
      "command": "workbench.action.tasks.runTask",
      "args": "Desktop: Run Electron app",
      "statusBar": {
        "alignment": "left",
        "text": "üñ• Desktop",
        "tooltip": "Run Electron app"
      }
    },
    "Build+Deploy Game": {
      "command": "workbench.action.tasks.runTask",
      "args": "Game: Build + Deploy",
      "statusBar": {
        "alignment": "left",
        "text": "üéÆ Game+Deploy",
        "tooltip": "Build + deploy game (AppImage + EXE, bumps game version + patch notes + backend version)"
      }
    },
    "Build+Deploy Launcher": {
      "command": "workbench.action.tasks.runTask",
      "args": "Launcher: Build + Deploy",
      "statusBar": {
        "alignment": "left",
        "text": "üöÄ Launcher+Deploy",
        "tooltip": "Build + deploy launcher (bumps launcher version + backend version)"
      }
    },
    "Deploy Unraid": {
      "command": "workbench.action.tasks.runTask",
      "args": "Deploy: Unraid full",
      "statusBar": {
        "alignment": "left",
        "text": "‚¨Ü Deploy",
        "tooltip": "Build + deploy to Unraid"
      }
    },
    "Git Pull": {
      "command": "git.pull",
      "statusBar": {
        "alignment": "left",
        "text": "‚¨á Pull",
        "tooltip": "git pull in workspace"
      }
    }
  }
}
