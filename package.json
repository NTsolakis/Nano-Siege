{
  "name": "nano-siege-backend",
  "version": "1.0.0",
  "description": "Backend + static server for Nano-Siege",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server/server.js",
    "desktop": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "deploy:unraid": "bash scripts/deploy-unraid.sh",
    "deploy:unraid:full": "bash scripts/build-and-deploy-unraid.sh",
    "launcher": "electron launcher",
    "launcher:electron": "ELECTRON_DISABLE_SANDBOX=1 electron launcher",
    "launcher:node": "node launcher/index.js",
    "build:launcher:electron:linux": "electron-builder --config launcher/electron-builder.launcher.json --linux AppImage",
    "build:launcher:electron:win": "electron-builder --config launcher/electron-builder.launcher.json --win portable",
    "build:launcher:linux": "pkg launcher/index.js --targets node18-linux-x64 --output dist/NanoSiegeLauncher-linux",
    "build:launcher:win": "pkg launcher/index.js --targets node18-win-x64 --output dist/NanoSiegeLauncher.exe",
    "build:linux": "electron-builder --linux AppImage",
    "build:win": "electron-builder --win portable",
    "build:all": "electron-builder -mwl",
    "build:desktop:release": "bash scripts/build-desktop-release.sh"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.0",
    "jsonwebtoken": "^9.0.2",
    "launcher": "^0.0.1",
    "npm": "^11.6.4",
    "run": "^1.5.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "pkg": "^5.8.1"
  },
  "build": {
    "appId": "net.nicksminecraft.nano-siege",
    "productName": "Nano-Siege",
    "files": [
      "index.html",
      "styles.css",
      "sandbox-config.js",
      "data/**/*",
      "src/**/*",
      "electron-main.js",
      "electron-preload.js",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game",
      "artifactName": "Nano-Siege.${ext}"
    },
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "Nano-Siege.${ext}"
    }
  }
}
